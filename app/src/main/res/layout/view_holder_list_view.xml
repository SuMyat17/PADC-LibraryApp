<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_medium_2"
    android:paddingTop="@dimen/margin_small"
    android:layout_marginEnd="@dimen/margin_medium_2"
    android:paddingBottom="@dimen/margin_medium_2"
    android:weightSum="10">

    <com.padcmyanmar.smtz.library.views.components.RoundedCornerImageView
        android:id="@+id/ivLibraryBookList"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="2"
        android:scaleType="fitXY"
        android:src="@mipmap/book"
        app:cornerRadius="@dimen/margin_medium" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5.8"
        android:paddingStart="@dimen/margin_medium_2"
        android:paddingTop="@dimen/margin_small"
        android:paddingEnd="@dimen/margin_medium_2">

        <TextView
            android:id="@+id/tvLibraryBookNameList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lean UX: Designing Great Products with Agile Teams"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvLibraryBookAuthorNameList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvLibraryBookNameList"
            android:layout_marginTop="@dimen/margin_small"
            android:text="Josh Waitzkin ~ Ebook"
            android:textColor="@color/colorSecondaryText" />

        <TextView
            android:id="@+id/tvEbookTypeList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvLibraryBookAuthorNameList"
            android:text="Ebook ~ Sample"
            android:textColor="@color/colorSecondaryText" />
    </RelativeLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="@dimen/margin_large"
        android:layout_weight="1"
        android:paddingTop="@dimen/margin_small"
        android:src="@drawable/ic_baseline_check_28dp_secondary" />

    <ImageView
        android:id="@+id/btnLibraryMoreActionList"
        android:layout_width="0dp"
        android:layout_height="@dimen/margin_large"
        android:layout_weight="1"
        android:paddingTop="@dimen/margin_small"
        android:src="@drawable/ic_more_secondary" />

</LinearLayout>